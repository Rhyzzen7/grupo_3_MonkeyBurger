<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
    <%- include("../partials/letras.ejs") %>
    <title>Editar Producto</title>
    <link rel="stylesheet" href="/css/estilo-editproduct.css" />
  </head>
  <body>
    <%- include("../partials/header.ejs") %>
    <h1>EDITAR PRODUCTOS</h1>
    <div class="nuevo-producto">
      <button class="button" type="submit">
        <h4><a href="newProduct">NUEVO PRODUCTO</a></h4>
      </button>
    </div>
    <form action="" method="POST">
      <div class="editar-producto">
        <div class="campo">
          <label>Categoría del producto a editar:</label>
          <select class="campo-completar" name="categoria">
            <option value="hamburguesas">Hamburguesas</option>
            <option value="Tapas">Tapas</option>
            <option value="bebidas">Bebidas</option>
            <option value="combos">Combos</option>
          </select>
        </div>
        <div class="campo">
          <label>Producto a editar:</label>
          <select class="campo-completar" name="categoria">
            <option value="product1">Product 1</option>
            <option value="product2">Product 2</option>
            <option value="product3">Product 3</option>
            <option value="product4">Product 4</option>
          </select>
        </div>
        <div class="campo">
          <label for="nombre">Nombre:</label>
          <input
            class="campo-completar"
            type="text"
            name="nombre"
            id="nombre"
            placeholder="nombre-actual"
          />
        </div>
        <div class="campo">
          <label for="descripcion">Descripción:</label>
          <textarea
            class="campo-completar"
            name="descripcion"
            id="descripcion"
            placeholder="descripcion-actual"
          >
          </textarea>
        </div>
        <div class="campo">
          <label for="precio">Precio:</label>
          <input
            class="campo-completar"
            type="text"
            name="precio"
            id="precio"
            placeholder="precio-actual"
          />
        </div>
        <div class="campo">
          <label>Actualizar foto:</label>
          <input type="file" name="foto-producto" accept="image/*" />
        </div>
        <div class="button-container">
          <div>
            <button class="button" type="submit">
              <h4><a href="">ACTUALIZAR PRODUCTO</a></h4>
            </button>
          </div>
          <div>
            <button class="button" type="reset">
              <h4><a href="">BORRAR ACTUALIZACIÓN</a></h4>
            </button>
          </div>
          <div>
            <button class="button" type="submit">
              <h4><a href="">ELIMINAR PRODUCTO</a></h4>
            </button>
          </div>
        </div>
      </div>
    </form>
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
