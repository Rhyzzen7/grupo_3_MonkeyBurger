<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/1f2014748d.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="icon" href="/img/icono.png" />
    <link rel="stylesheet" href="/css/estilo-menu.css" />
    <script
      src="https://kit.fontawesome.com/1f2014748d.js"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Antonio:wght@700&family=Josefin+Sans:ital@1&family=Lato:ital,wght@1,700&family=Sansita+Swashed:wght@400;800&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Antonio:wght@100;700&family=Josefin+Sans:ital@1&family=Lato:ital,wght@1,700&family=Sansita+Swashed:wght@400;800&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Antonio:wght@100;700&family=Josefin+Sans:ital@1&family=Lato:ital,wght@1,700&family=Marvel:wght@700&family=Sansita+Swashed:wght@400;800&display=swap"
      rel="stylesheet"
    />
    <title>Menú</title>
  </head>
  <body>
    <header>
      <!--Contenedor para el logo-->
      <div class="top-header">
        <!--mobile: hamburger menu, brand, buy cart-->
        <div class="hamburger-menu">
          <!--cabecera-mobile -->
          <a href="#modal-nav"><i class="fa-solid fa-bars"></i></a>
          <!--modal-navegacion -->
        </div>
        <div class="brand-max">
          <a href="/">
            <img
              src="/img/Isotipo-fondotransparente.png"
              alt="Logo"
              class="brand-logo-max"
          /></a>
        </div>
        <div class="brand">
          <!--marca -->
          <a href="/"><h1 class="brand-name">MONKEY BURGER</h1></a>
          <a href="/"><h2 class="brand-type">HAMBURGUESAS GOURMET</h2></a>
          <a href="/">
            <img
              src="/img/imagotipo-negro-fondo-transparente-inv3.png"
              alt="Logo"
              class="brand-logo"
          /></a>
        </div>
        <div class="buy-cart">
          <a href="productCart"><i class="fa-solid fa-cart-shopping"></i></a>
        </div>
      </div>
      <div class="bottom-header">
        <div id="modal-nav" class="header-bar">
          <!--modal-navegacion, cabecera-barra -->
          <nav class="nav-bar">
            <div class="close-nav">
              <!--cerrar-navegacion -->
              <a href="/"><i class="fa-solid fa-xmark"></i></a>
            </div>
            <!--barra-navegacion -->
            <ul class="menu-bar">
              <li>
                <h3 class="menu-text"><a href="nosotros">NOSOTROS</a></h3>
              </li>
              <li>
                <h3 class="menu-text"><a href="menu">MENÚ</a></h3>
              </li>
              <li>
                <h3 class="menu-text">
                  <a href="order">HACE TU PEDIDO</a>
                </h3>
              </li>
              <li>
                <h3 class="menu-text"><a href="contacto">CONTACTO</a></h3>
              </li>
            </ul>
            <ul class="users-bar">
              <li class="users">
                <h4 class="users-text"><a href="login">INICIAR SESIÓN</a></h4>
              </li>
              <li class="users">
                <h4 class="users-text"><a href="register">CREAR CUENTA</a></h4>
              </li>
              <li class="buy">
                <h4 class="buy-text"><a href="productCart">CARRITO</a></h4>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <main>
      <h1>INFARTATE CON NUESTRO MENÚ</h1>
      <ul class="navbar">
        <li class="lista">
          <a class="borrarlink" href="/menu#hamburguesas">HAMBURGUESAS</a>
        </li>
        <li class="lista">
          <a class="borrarlink" href="/menu#tapas">TAPAS</a>
        </li>
        <li class="lista">
          <a class="borrarlink" href="/menu#bebidas">BEBIDAS</a>
        </li>
        <li class="lista">
          <a class="borrarlink" href="/menu#combos">COMBOS DEL MES</a>
        </li>
      </ul>

      <h2 id="hamburguesas">HAMBURGUESAS</h2>
      <div class="contenedor-producto">
        <% burgers.forEach(burger => { %>
        <div class="subcontenedor-infoproducto">
          <h3><%=burger.name%></h3>
          <div><%=burger.detail%></div>
          <h4>$ <%=burger.price%></h4>
          <div class="contenedor-boton-hace-tu-pedido">
            <a class="boton-hace-tu-pedido" href="/order">HACÉ TU PEDIDO</a>
          </div>
        </div>
        <img
          class="subcontenedor-fotoproducto"
          src="<%=burger.image%>"
          alt="foto de <%=burger.name%>"
        />
        <% }) %>
      </div>

      <h2 id="tapas">TAPAS</h2>
      <div class="contenedor-producto">
        <% chips.forEach(chip => { %>
        <div class="subcontenedor-infoproducto">
          <h3><%=chip.name%></h3>
          <div><%=chip.detail%></div>
          <h4>$ <%=chip.price%></h4>
          <div class="contenedor-boton-hace-tu-pedido">
            <a class="boton-hace-tu-pedido" href="/order">HACÉ TU PEDIDO</a>
          </div>
        </div>
        <img
          class="subcontenedor-fotoproducto"
          src="<%=chip.image%>"
          alt="foto de <%=chip.name%>"
        />
        <% }) %>
      </div>

      <h2 id="bebidas">BEBIDAS</h2>
      <div class="bebidas">
        <% drinks.forEach(drink => { %>
        <div class="contenedor-bebida">
          <img
            class="foto-bebida"
            src="<%=drink.image%>"
            alt="logo <%=drink.name%>"
          />
          <div class="info-bebidas">
            <h3><%=drink.name%> - <%=drink.detail%></h3>
            <div class="precio-boton-bebidas">
              <h4>$ 250</h4>
              <div class="contenedor-boton-hace-tu-pedido">
                <a class="boton-hace-tu-pedido" href="/order">HACÉ TU PEDIDO</a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <h2 id="combos">COMBOS DEL MES</h2>
      <div class="contenedor-producto">
        <% comboc.forEach(combo => { %>
        <div class="subcontenedor-infoproducto info-a-la-derecha">
          <h3><%=combo.name%></h3>
          <div><%=combo.detail%></div>
          <h4>$ <%=combo.price%></h4>
          <div class="contenedor-boton-hace-tu-pedido">
            <a class="boton-hace-tu-pedido" href="/order">HACÉ TU PEDIDO</a>
          </div>
        </div>
        <img
          class="subcontenedor-fotoproducto"
          src="<%=combo.image%>"
          alt="foto combo <%=combo.name%>"
        />
        <% }) %>
      </div>
    </main>
    <footer>
      <!--Redes sociales-->
      <div class="pie-pagina">
        <p><i class="fa-brands fa-facebook"></i></p>
        <p><i class="fa-brands fa-instagram"></i></p>
        <p><i class="fa-brands fa-whatsapp"></i></p>
      </div>
      <!--Enlaces-->
      <div class="pie-pagina">
        <nav class="pie-navegacion">
          <ul>
            <li>
              <h5><a href="#">POLITICA</a></h5>
            </li>
            <li>
              <h5><a href="#">DEFENSA AL CONSUMIDOR</a></h5>
            </li>
            <li>
              <h5><a href="#">PROTECCION DE DATOS</a></h5>
            </li>
            <li>
              <h5><a href="#">CONTACTANOS</a></h5>
            </li>
          </ul>
        </nav>
      </div>
      <div class="desarrolladores"><p>Desarrolladores DH</p></div>
    </footer>
  </body>
</html>
